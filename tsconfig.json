{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "lib": ["es7", "dom"],
    "declaration": true,
    "inlineSources": true,
    "inlineSourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "jsx": "react",
    "jsxFactory": "etch.dom",
    "typeRoots": ["./typings"]
  },
  "include": ["typings", "lib/**/*", "spec/**/*"]
}
